@model UserModel

@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <h3 class="text-center">@ViewBag.Title</h3>
    <hr />

    <form asp-action="Login" class="p-4 border rounded shadow-sm bg-light">
        @Html.AntiForgeryToken()
        <div class="mb-3 row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Record.UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Record.UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3 row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Record.Password" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="Record.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success w-50">Login</button>
        </div>
    </form>
</div>
